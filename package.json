{
  "name": "typescript-graphql",
  "type": "module",
  "license": "MIT",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "dev": "tsx src/server",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc && npm run build:schema",
    "build:schema": "tsx src/schema/index.ts",
    "generate": "npm -s run generate:prisma",
    "generate:prisma": "prisma generate"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@pothos/core": "4.0.2",
    "@pothos/plugin-prisma": "^4.0.5",
    "@pothos/plugin-relay": "^4.1.0",
    "@prisma/client": "5.16.1",
    "graphql": "16.9.0",
    "graphql-scalars": "1.23.0",
    "graphql-yoga": "5.6.2"
  },
  "devDependencies": {
    "@types/node": "20.14.13",
    "prisma": "5.16.1",
    "tsx": "^4.18.0",
    "typescript": "5.5.4"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  }
}
