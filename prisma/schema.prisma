generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  reviews        Review[]
  isAdmin        Boolean  @default(false)
  joinedSince    DateTime @default(now())
  submittedBeans Bean[]   @relation("SubmittedBeans")
  reviewedBeans  Bean[]   @relation("ReviewedBeans")
  avatar         String?
}

model Review {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  bean      Bean     @relation(fields: [beanId], references: [id])
  beanId    String
  rating    Float
  photo     String?
}

model Roaster {
  id          String  @id @default(uuid())
  published   Boolean @default(false)
  name        String
  description String
  address     String
  country     String
  beans       Bean[]
  website     String?
  image       String?
}

model Bean {
  id          String        @id @default(uuid())
  name        String
  roaster     Roaster?       @relation(fields: [roasterId], references: [id])
  roasterId   String?
  reviews      Review[]
  published   Boolean       @default(false)
  tastingNotes TastingNote[]
  website     String?
  origin      Origin
  process     Process
  description String?
  image       String?
  reviewers   User[]        @relation("ReviewedBeans")
  submitter   User         @relation("SubmittedBeans", fields: [submitterId], references: [id])
  submitterId String
}

enum Process {
  Washed
  Natural
  Honey
  Special
  Other
}

enum TastingNote {
  Fruity
  Cocoa
  Sweetness
  Floral
  Sour
  Baking
  Spice
  Green
  Other
}

enum Origin {
  Brazil
  Colombia
  Ethiopia
  Kenya
  Guatemala
  Honduras
  CostaRica
  Indonesia
  Vietnam
  Mexico
  Peru
  Nicaragua
  Tanzania
  Rwanda
  Uganda
  India
  Yemen
  Panama
  ElSalvador
  PapuaNewGuinea
  Other
}
